{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "HSB",
    "scopeName": "source.hsb",
    "patterns": [
        {
            "name": "meta.manifest.hsb",
            "begin": "\\A",
            "end": "^\\s*end of manifest\\s*$",
            "endCaptures": {
                "0": {
                    "name": "keyword.control.manifest-end.hsb"
                }
            },
            "patterns": [
                {
                    "name": "entity.name.tag.yaml.hsb",
                    "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
                    "captures": {
                        "1": {
                            "name": "entity.name.tag.yaml.hsb"
                        },
                        "2": {
                            "name": "punctuation.separator.key-value.yaml.hsb"
                        }
                    }
                },
                {
                    "name": "string.quoted.double.yaml.hsb",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.yaml.hsb",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "punctuation.definition.list.yaml.hsb",
                    "match": "^\\s*-\\s"
                }
            ]
        },
        {
            "include": "text.html.basic"
        }
    ]
}